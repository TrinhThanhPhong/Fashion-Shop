@model IEnumerable<FashionShop.Models.common.ShoppingCartItem>
@using FashionShop.Models.common

<table class="table">
    <tr class="text-center">
        <th>No</th>
        <th>Product Image</th>
        <th>Product Name</th>
        <th>Category Name</th>
        <th>Product Price</th>
        <th style="width: 100px;">Product Amount</th>
        <th>Total Price</th>
        <th style="width: 200px;">

        </th>
    </tr>
    @if (Model != null && Model.Any())
    {
        var i = 0;
        var totalPrice = decimal.Zero;
        foreach (var item in Model)
        {
            totalPrice += item.TotalPrice;
<tr class="text-center" id="trow_@item.ProductId">
    <td>@(i + 1)</td>
    <td><a href="/detail-product/@item.Alias-p@(item.ProductId)"><img src="@item.ProductImg" width="60" /></a></td>
    <td><a href="/detail-product/@item.Alias-p@(item.ProductId)">@(item.ProductName.Length > 50 ? item.ProductName.Substring(0, 50) + "..." : item.ProductName)</a></td>
    <td>@item.CategoryName</td>
    <td>@Common.FormatNumber(item.Price, 0)</td>
    <td><input type="number" class="form-control" id="Quantity_@item.ProductId" value="@item.Quantity" /></td>
    <th>@Common.FormatNumber(item.TotalPrice, 2)</th>
    <td>
        <a href="#" data-id="@item.ProductId" class="btn btn-sm btn-danger btnDelete">Delete</a>
        <a href="#" data-id="@item.ProductId" class="btn btn-sm btn-success btnUpdate">Update</a>
    </td>
</tr>
            i++;
        }
        <tr class="text-right">
            <th colspan="6">Total Price: </th>
            <th>@Common.FormatNumber(totalPrice, 0)</th>
            <th></th>
        </tr>
    }
    else
    {
        <tr>
            <th colspan="7">Don't have product in the cart!!!</th>
        </tr>
    }
</table>