@model IEnumerable<FashionShop.Models.common.ShoppingCartItem>
@using FashionShop.Models.common

@if (Model != null && Model.Any())
{
    <h3>Danh sách sản phẩm<span style="float:right;"><small>@Model.Count()</small></span></h3>
    var totalPrice = decimal.Zero;

<div style="border: 1px solid #808080;">
    <table class="table">
        @foreach (var item in Model)
        {
            totalPrice += item.TotalPrice;
            <tr>
                <td>@item.ProductName</td>
                <td>@Common.FormatNumber(item.Price, 0)</td>
            </tr>
        }
        <tr>
            <td>Total</td>
            <td>@Common.FormatNumber(totalPrice, 0)</td>
        </tr>
    </table>
</div>
    

}
else
{

}
