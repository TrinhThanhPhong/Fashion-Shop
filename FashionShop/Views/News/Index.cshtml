@model PagedList.PagedList<FashionShop.Models.EF.News>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Tin tức";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<style>
    .news-section-container {
        margin-top: 200px;
    }

    .row-item-news {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
    .pagination {
        display: inline-block;
        padding: 10px 0;
        margin: 20px 0;
    }

        .pagination li {
            display: inline;
            margin: 0 5px;
        }

            .pagination li.active a {
                background-color: #007bff;
                color: white;
                border-radius: 4px;
                padding: 5px 10px;
            }

            .pagination li a {
                color: #007bff;
                text-decoration: none;
                border: 1px solid #ddd;
                padding: 5px 10px;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }

                .pagination li a:hover {
                    background-color: #0056b3;
                    color: white;
                }

            .pagination li.disabled a {
                color: #ccc;
                pointer-events: none;
                border: 1px solid #ddd;
                padding: 5px 10px;
                border-radius: 4px;
            }
</style>
<div class="container news-section-container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">Tin tức</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row-item-news">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="" title="@item.Title"><img src="@item.Image" alt="@item.Title" /></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h3><a style="color:black;" href="/@item.Alias-n@(item.Id)" title="@item.Title">@item.Title</a></h3>
                        <div class="description-box">
                            @item.Description
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-6">

            </div>
            <div class="col-6" style="text-align: right;">
                @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
            </div>
        </div>
    }

</div>