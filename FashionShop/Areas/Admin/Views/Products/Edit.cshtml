@model FashionShop.Models.EF.Product
@{
    ViewBag.Title = "Cập nhật thông tin sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/RevenueStatistical/index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Products" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin sản phẩm</h3>


        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.Id)
                        @Html.HiddenFor(x => x.CreatedDate)
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
                                    @*<li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Images</a></li>*@
                                    <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">SEO</a></li>
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tên sản phẩm</label>
                                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Tên sản phẩm" })
                                            @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Loại sản phẩm</label>
                                            @Html.TextBoxFor(x => x.ProductType, new { @class = "form-control", @placeholder = "Loại sản phẩm" })
                                            @Html.ValidationMessageFor(x => x.ProductType, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Thương hiệu</label>
                                            @Html.TextBoxFor(x => x.ProductBrand, new { @class = "form-control", @placeholder = "Thương hiệu" })
                                            @Html.ValidationMessageFor(x => x.ProductBrand, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mã sản phẩm</label>
                                            @Html.TextBoxFor(x => x.ProductCode, new { @class = "form-control", @placeholder = "Mã sản phẩm" })
                                            @Html.ValidationMessageFor(x => x.ProductCode, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Danh mục sản phẩm</label>
                                            @Html.DropDownListFor(x => x.ProductCategoryId, ViewBag.ProductCategory as SelectList, "-Chọn danh mục sản phẩm-", new { @class = "form-control", @placeholder = "Danh mục sản phẩm" })
                                            @Html.ValidationMessageFor(x => x.ProductCategoryId, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mô tả sản phẩm</label>
                                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Mô tả sản phẩm" })
                                            @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Chi tiết sản phẩm</label>
                                            @Html.TextAreaFor(x => x.Detail, new { @class = "form-control", @id = "txtDetail" })
                                            @Html.ValidationMessageFor(x => x.Detail, null, new { @class = "text-danger" })
                                        </div>
                                        @* ---------------------------------------Size--------------------------------------------------- *@
                                        <div class="row" style="display: flex; justify-content:space-evenly; align-items: center;">
                                            <label for="exampleInputEmail1">Kích cỡ</label>
                                            <div class="col-1">
                                                <div class="form-group" style="display:flex; flex-direction: column; align-items: center;">
                                                    <label for="exampleInputEmail1">XS</label>
                                                    @Html.TextBoxFor(x => x.SizeXS, new { @class = "form-control", @value = "0" })
                                                    @Html.ValidationMessageFor(x => x.SizeXS, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-1">
                                                <div class="form-group" style="display:flex; flex-direction: column; align-items: center;">
                                                    <label for="exampleInputEmail1">S</label>
                                                    @Html.TextBoxFor(x => x.SizeS, new { @class = "form-control", @value = "0" })
                                                    @Html.ValidationMessageFor(x => x.SizeS, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-1">
                                                <div class="form-group" style="display:flex; flex-direction: column; align-items: center;">
                                                    <label for="exampleInputEmail1">M</label>
                                                    @Html.TextBoxFor(x => x.SizeM, new { @class = "form-control", @value = "0" })
                                                    @Html.ValidationMessageFor(x => x.SizeM, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-1">
                                                <div class="form-group" style="display:flex; flex-direction: column; align-items: center;">
                                                    <label for="exampleInputEmail1">L</label>
                                                    @Html.TextBoxFor(x => x.SizeL, new { @class = "form-control", @value = "0" })
                                                    @Html.ValidationMessageFor(x => x.SizeL, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-1">
                                                <div class="form-group" style="display:flex; flex-direction: column; align-items: center;">
                                                    <label for="exampleInputEmail1">XL</label>
                                                    @Html.TextBoxFor(x => x.SizeXL, new { @class = "form-control", @value = "0" })
                                                    @Html.ValidationMessageFor(x => x.SizeXL, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-1">
                                                <div class="form-group" style="display:flex; flex-direction: column; align-items: center;">
                                                    <label for="exampleInputEmail1">XXL</label>
                                                    @Html.TextBoxFor(x => x.SizeXXL, new { @class = "form-control", @value = "0" })
                                                    @Html.ValidationMessageFor(x => x.SizeXXL, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-1">
                                                <div class="form-group" style="display:flex; flex-direction: column; align-items: center;">
                                                    <label for="exampleInputEmail1">XXXL</label>
                                                    @Html.TextBoxFor(x => x.SizeXXXL, new { @class = "form-control", @value = "0" })
                                                    @Html.ValidationMessageFor(x => x.SizeXXXL, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        @* ------------------------------------------------------------------------------------------ *@
                                        <div class="row">
                                            @*<div class="col-3">
                <div class="form-group">
                    <label for="exampleInputEmail1">Quantity</label>
                    @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control", @value = "1" })
                    @Html.ValidationMessageFor(x => x.Quantity, null, new { @class = "text-danger" })
                </div>
            </div>*@
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Giá</label>
                                                    <input type="text" name="demoPrice" value="@Model.Price" id="demoPrice" class="form-control auto" data-a-dec="," data-a-sep="." />
                                                    @Html.HiddenFor(x => x.Price, new { @class = "", @placeholder = "Giá" })
                                                    @Html.ValidationMessageFor(x => x.Price, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Giá khuyến mãi</label>
                                                    <input type="text" name="demoPriceSale" id="demoPriceSale" value="@Model.PriceSale" class="form-control auto" data-a-dec="," data-a-sep="." />
                                                    @Html.HiddenFor(x => x.PriceSale, new { @class = "form-control", @placeholder = "Giá khuyến mãi" })
                                                    @Html.ValidationMessageFor(x => x.PriceSale, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Giá nhập</label>
                                                    <input type="text" name="demoOriginalPrice" id="demoOriginalPrice" value="@Model.OriginalPrice" class="form-control auto" data-a-dec="," data-a-sep="." />
                                                    @Html.HiddenFor(x => x.OriginalPrice, new { @class = "form-control", @placeholder = "Giá nhập" })
                                                    @Html.ValidationMessageFor(x => x.OriginalPrice, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsActive, new { @class = "input-control-label", @id = "customCheckbox2", @checked = "checked" })
                                                        <label for="customCheckbox2">Hiển thị</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsHot, new { @class = "input-control-label", @id = "IsHotCheckbox" })
                                                        <label for="IsHotCheckbox">Hot</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsFeature, new { @class = "input-control-label", @id = "IsFeatureCheckbox" })
                                                        <label for="IsFeatureCheckbox">Đặc sắc</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsSale, new { @class = "input-control-label", @id = "IsSaleCheckbox" })
                                                        <label for="IsSaleCheckbox">Giảm giá</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="tab-pane" id="settings">
                                        <form class="form-horizontal">
                                            <div class="form-group row">
                                                <label for="inputName" class="col-sm-2 col-form-label">Tiêu đề SEO</label>
                                                <div class="col-sm-10">
                                                    @Html.TextBoxFor(x => x.SeoTitle, new { @class = "form-control", @placeholder = "Tiêu đề SEo" })
                                                    @Html.ValidationMessageFor(x => x.SeoTitle, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputEmail" class="col-sm-2 col-form-label">Từ khóa SEO</label>
                                                <div class="col-sm-10">
                                                    @Html.TextBoxFor(x => x.SeoKeywords, new { @class = "form-control", @placeholder = "Từ khóa SEO" })
                                                    @Html.ValidationMessageFor(x => x.SeoKeywords, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputName2" class="col-sm-2 col-form-label">Mô tả SEO</label>
                                                <div class="col-sm-10">
                                                    @Html.TextBoxFor(x => x.SeoDescription, new { @class = "form-control", @placeholder = "Mô tả SEO" })
                                                    @Html.ValidationMessageFor(x => x.SeoDescription, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- /.tab-pane -->
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->

                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Lưu</button>
                                <a href="/Admin/Products" class="btn btn-danger">Quay lại</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts {
    <script>
        $(document).ready(function () {
            $('.auto').autoNumeric('init');
            $('#demoPrice').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoPrice').autoNumeric('get');
                $('#Price').val(demoGet);
                $('#Price').autoNumeric('set', demoGet);
            });
            $('#demoPriceSale').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoPriceSale').autoNumeric('get');
                $('#PriceSale').val(demoGet);
                $('#PriceSale').autoNumeric('set', demoGet);
            });
            $('#demoOriginalPrice').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoOriginalPrice').autoNumeric('get');
                $('#OriginalPrice').val(demoGet);
                $('#OriginalPrice').autoNumeric('set', demoGet);
            });
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
    </script>
}